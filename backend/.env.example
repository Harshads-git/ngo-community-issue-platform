# ----------------------------------------
# DATABASE CONFIGURATION
# ----------------------------------------
MONGODB_URI=mongodb_uri_goes_here

# ----------------------------------------
# SERVER CONFIGURATION
# ----------------------------------------
PORT=5000
NODE_ENV=development
AI_SERVICE_URL=http://localhost:8000/api

# ----------------------------------------
# EMAIL CONFIGURATION (Uses Mailtrap.io below by default for dev/testing)
# ----------------------------------------
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_EMAIL=your_mailtrap_user_here
SMTP_PASSWORD=your_mailtrap_pass_here
FROM_EMAIL=noreply@ngocommunity.com
FROM_NAME="NGO Issue Platform"

# ----------------------------------------
# SECURITY & AUTHENTICATION
# ----------------------------------------
JWT_SECRET=your_secret_key_here
JWT_EXPIRE=7d
BCRYPT_ROUNDS=10

# ----------------------------------------
# FILE UPLOAD CONFIGURATION
# ----------------------------------------
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./public/uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# ----------------------------------------
# CLIENT URL (for CORS)
# ----------------------------------------
CLIENT_URL=http://localhost:3000
